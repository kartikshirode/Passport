# Backend Environment Variables

# Server Configuration
ENVIRONMENT=development
LOG_LEVEL=info
HOST=0.0.0.0
PORT=8000

# Security & Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
MAX_FILE_SIZE=8388608

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend-domain.com

# Optional: API Keys for enhanced security
# API_KEY=your-secure-api-key-here

# Optional: Monitoring & Analytics
# SENTRY_DSN=your-sentry-dsn-here
# LOG_FILE_PATH=/tmp/passport-photo.log

# Processing Configuration
FACE_DETECTION_SCALE_FACTOR=1.3
FACE_DETECTION_MIN_NEIGHBORS=5
DEFAULT_FACE_SCALE=2.2
DEFAULT_OUTPUT_SIZE=600

# Background Colors (hex codes)
WHITE_BG=#FFFFFF
BLUE_BG=#0066CC
RED_BG=#CC0000
LIGHT_GRAY_BG=#D3D3D3
LIGHT_BLUE_BG=#ADD8E6
LIGHT_RED_BG=#FFB6C1